{
    "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJS": true,
    "skipLibCheck": true,
    "allowSyntheticDefaultsImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "module": "commonjs",
    "outDir": "dist",
    "rootDir": "src"
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules"]
    }